<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agent.ManagePropertyActivity"
    android:backgroundTint="@color/white"
    android:background="@color/white">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_view"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="-90dp">

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/create_rent"
                    android:clickable="true"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/proj_green">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/add"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="65dp"
                        android:layout_width="wrap_content"
                        android:layout_height="68dp"
                        android:text="Create New Rent Neighbourhood"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="20dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/man_rent"
                    android:textColor="@color/black"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Manage my Rent Neighbourhoods"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#B5FAEC"
                    android:background="@drawable/roundstyle"
                    android:layout_width="350dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/create_sec"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/create_security"
                    android:layout_width="350dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/proj_green">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/add"
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="Create New Security Neighbourhood"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="18dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/man_sec"
                    android:textColor="@color/black"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Manage my Security Neighbourhoods"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#B5FAEC"
                    android:background="@drawable/roundstyle"
                    android:layout_width="350dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/create_waste"
                    android:layout_width="350dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/proj_green"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/add"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="65dp"
                        android:layout_width="wrap_content"
                        android:layout_height="92dp"
                        android:text="Create New Waste/Management Neighbourhood"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingTop="20dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/man_waste"
                    android:textColor="@color/black"
                    android:paddingTop="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Manage my Waste Neighbourhood"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#B5FAEC"
                    android:background="@drawable/roundstyle"
                    android:layout_width="350dp"
                    android:layout_height="70dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Property"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="6dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/arrow_back"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#5289A1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>