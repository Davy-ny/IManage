<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfileActivity"
    android:background="@color/white">

    <View
        android:id="@+id/top_page_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_views3"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prof_img"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/addimage"/>

    <EditText
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtfirstname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Enter First Name"
        android:textColorHint="@color/underline"
        android:textColor="@color/black"/>

    <EditText
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtlastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Enter Last Name"
        android:textColorHint="@color/underline"
        android:textColor="@color/black"/>

    <EditText
        android:hint="Enter Your Email"
        android:layout_marginTop="410dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edt_prof_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/underline"
        android:textColor="@color/black"/>

    <Button
        android:backgroundTint="@color/proj_blue"
        android:layout_marginTop="505dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_create_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CREATE" />

    <TextView
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textSize="28sp"
        android:textColor="@color/white"
        />


</RelativeLayout>