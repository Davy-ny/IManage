<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePaymentActivity"
    android:background="@color/white">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_view"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rent_payment"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E3F3F3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RENT PAYMENT"
                    android:layout_marginLeft="15dp"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#339E38"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/security_payment"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E3F3F3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURITY PAYMENT"
                    android:layout_marginLeft="15dp"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/proj_blue"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/waste_payment"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E3F3F3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WASTE PAYMENT"
                    android:layout_marginLeft="15dp"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/proj_brown"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="7dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/arrow_back"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#5289A1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>